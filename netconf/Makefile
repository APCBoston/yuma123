# Makefile for Yuma entire tools directory
#  
#   top directory

##################### LIBRARIES ########################
#
# DIRS:  
# This is an ordered list
# Put only the directories that build object files in the list

# make all targets
DIRS = src modules etc doc

TOP_INSTALL = $(DESTDIR)/usr/share/yuma

DOC_INSTALL = $(DESTDIR)/usr/share/doc/yuma

ifdef DESTDIR
JFLAG=
else
JFLAG = -j3
endif

#################### PLATFORM DEFINITIONS ############

all: treeall

################################ MAKE RULES #################################
#

clean: treeclean

superclean: treesuperclean

install: treeinstall

treeall:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) $(JFLAG) all && cd ..;\
        done

treeclean:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) clean && cd ..;\
        done

treesuperclean:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) superclean && cd ..;\
        done

treeinstall:
ifdef DESTDIR
	mkdir -p $(DESTDIR)/usr/bin
	mkdir -p $(DESTDIR)/usr/sbin
	mkdir -p $(DESTDIR)/usr/local/bin
	mkdir -p $(DESTDIR)/usr/local/sbin
	mkdir -p $(DESTDIR)/etc
	mkdir -p $(DESTDIR)/usr/share/doc
endif
	sudo mkdir -p $(DOC_INSTALL)
	sudo mkdir -p $(TOP_INSTALL)
	sudo mkdir -p $(TOP_INSTALL)/data
	sudo mkdir -p $(TOP_INSTALL)/etc
	sudo mkdir -p $(TOP_INSTALL)/modules
	sudo mkdir -p $(TOP_INSTALL)/scripts
	for dir in $(DIRS); do\
          cd $$dir && $(MAKE) install && cd ..;\
        done



.PHONY: all clean superclean install \
	treeall treeclean treesuperclean treeinstall 


# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:




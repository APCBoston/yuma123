# Makefile for NETCONF project
#  
#   ncx directory

############### SOURCE PROFILE ##############################

SUBDIR_NM=ncx
SUBDIR_CPP=

############### TARGET PROFILE ##############################

TARGET=$(TBASE)/$(SUBDIR_NM)
LIB_INST=$(TBASE)/lib
LIB_MAJOR_VERSION=1
LIB_MINOR_VERSION=0

ifdef MAXWELL
REAL_INST=/lib
else
REAL_INST=$(DESTDIR)/usr/lib
endif


######################### MAKE RULES ######################

all: ncxdummy ncxlib

#################### PLATFORM DEFINITIONS ############
include ../platform/platform.profile

################ DEPENDENCIES #########################
# depend rule must be included after the 'all' make rule

include ../platform/platform.profile.depend


test:

ifdef SERVER
# nothing to do for debian SERVER build
install:
else
ifdef DEVELOPER
# just install the H files
install: includes
else
install:
ifndef STATIC
# maybe install libncx
	mkdir -p $(REAL_INST)
	install $(OWNER) $(GRP) \
	$(LIB_INST)/lib$(SUBDIR_NM).$(LIBSUFFIX) \
	$(REAL_INST)
ifndef DESTDIR
ifndef MAC
# skip in MacOsX, RPM, and debian fakeroot build
	ldconfig
endif
endif
endif
endif
endif

uninstall:
	rm -f $(REAL_INST)/lib$(SUBDIR_NM).$(LIBSUFFIX)

ifdef SERVER
ncxlib:
else
ifdef DEVELOPER
ncxlib:
else
ncxlib: $(LBASE)/lib$(SUBDIR_NM).$(LIBSUFFIX)
endif
endif

# this dummy rule keeps make from deleting the $(OBJS) as
# intermediate files
ncxdummy: dependencies $(OBJS)

clean:
	rm -f $(OBJS) $(LBASE)/lib$(SUBDIR_NM).*

superclean:
	rm -f *~  $(DEPS) dependencies $(OBJS) \
	$(LBASE)/lib$(SUBDIR_NM).*

distclean: superclean uninstall

$(LBASE)/libncx.so: $(OBJS)
	gcc -shared -Wl, -soname,libncx.so.1 \
	-o $@.$(LIB_MAJOR_VERSION).$(LIB_MINOR_VERSION) $(OBJS) -lc



#	gcc -shared -dynamic -Wl,-soname,libncx.so -o $@ $(OBJS) -lc

$(LBASE)/libncx.dylib: $(OBJS)
	gcc -shared -dynamiclib -std=gnu99 -current_version \
	$(LIB_MAJOR_VERSION).$(LIB_MINOR_VERSION) \
	-undefined dynamic_lookup \
	-o $@ -install_name libncx.dylib $(OBJS) -lxml2

includes:


.PHONY: includes

# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:

ifndef DEVELOPER
include dependencies
endif


# Makefile for Yuma util directory
#  
#   util directory

UTIL_INSTALL = $(DESTDIR)/usr/share/yuma/util

BIN_INSTALL = $(DESTDIR)/usr/bin

all:

depend:

clean:

uninstall:
	rm -f $(UTIL_INSTALL)

superclean: clean

ifdef CLIENT
install:
else
ifdef SHLIBS
install:
else
ifdef SERVER
install:
else
ifdef DEVELOPER
install: installfiles
else
install: installfiles
endif
endif
endif
endif

installfiles:
	mkdir -p $(UTIL_INSTALL)
	cp makefile.sil $(UTIL_INSTALL)/
	cp makefile-top.sil $(UTIL_INSTALL)/
	mkdir -p $(BIN_INSTALL)
	install $(OWNER) $(GRP) make_sil_dir.sh $(BIN_INST)

distclean: superclean uninstall

.PHONY: all clean depend superclean install uninstall distclean \
	installfiles

# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:




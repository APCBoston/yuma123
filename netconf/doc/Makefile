# Makefile for Yuma doc directory
#  
#   doc directory

DOC_INSTALL = $(DESTDIR)/usr/share/doc/yuma

all:

depend:

clean:

superclean:

uninstall:
	rm -f $(DOC_INSTALL)

install:
	mkdir -p $(DOC_INSTALL)
	cp yuma_docs/yuma-user-manual.pdf $(DOC_INSTALL)
	cp yuma_docs/yuma-quickstart-guide.pdf $(DOC_INSTALL)
	cp extra/AUTHORS $(DOC_INSTALL)
	cp extra/ChangeLog $(DOC_INSTALL)
	cp extra/COPYING $(DOC_INSTALL)
	cp extra/README $(DOC_INSTALL)
ifndef FREE
	cp yuma_docs/yuma-dev-manual.pdf $(DOC_INSTALL)
endif

distclean: superclean uninstall


.PHONY: all clean depend superclean install distclean uninstall

# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:




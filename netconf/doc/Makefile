# Makefile for Yuma etc directory
#  
#   doc directory

DOC_INSTALL = $(DESTDIR)/usr/share/doc/yuma

ifdef DESTDIR
SUDO=
else
SUDO=sudo
endif

all:

depend:

clean:
	$(SUDO) rm -f $(DOC_INSTALL)/*

superclean: clean

install:
	$(SUDO) cp yuma_docs/yuma-user-manual.pdf $(DOC_INSTALL)
ifdef FREE
	$(SUDO) cp extra/AUTHORS $(DOC_INSTALL)
	$(SUDO) cp extra/ChangeLog $(DOC_INSTALL)
	$(SUDO) cp extra/COPYING $(DOC_INSTALL)
	$(SUDO) cp extra/README $(DOC_INSTALL)
else
	$(SUDO) cp yuma_docs/yuma-dev-manual.pdf $(DOC_INSTALL)
endif


.PHONY: all clean depend superclean install

# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:




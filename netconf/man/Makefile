# Makefile for Yuma man directory
#  
#   man directory

MAN_INSTALL = $(DESTDIR)/usr/share/man/man1

WEB_INSTALL = $(DESTDIR)/home/andy/MAN_WEBPAGES

ifdef CLIENT
MAN_FILES = yangdump.1 yangdiff.1 yangcli.1
else
ifdef SERVER
MAN_FILES = netconfd.1 netconf-subsystem.1
else
ifdef RELEASE
MAN_FILES = 
else
MAN_FILES = yangdump.1 yangdiff.1 yangcli.1 netconfd.1 netconf-subsystem.1
endif
endif
endif

all:

depend:

clean:

superclean:

uninstall:
	cd $(MAN_INSTALL) && rm -f $(MAN_FILES)

install:
	mkdir -p $(MAN_INSTALL)
	for fil in $(MAN_FILES); do \
	  gzip -c $$fil > $(MAN_INSTALL)/$$fil.gz;\
	done


webinstall:
	mkdir -p $(WEB_INSTALL)
	for fil in $(MAN_FILES); do \
	  groff -mandoc -mwww -Thtml $$fil > $(WEB_INSTALL)/$$fil.html;\
	done

distclean: superclean uninstall


.PHONY: all clean depend superclean install distclean uninstall

# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:




# Makefile for libtoaster entire directory
#  
#   very top libtoaster directory

##################### LIBRARIES ########################
#
# DIRS:  
# This is an ordered list
# Put only the directories that build object files in the list

# make all targets
DIRS = src

ifdef DESTDIR
JFLAG= 
SUDO= 
else
SUDO=sudo
JFLAG = -j3
endif

#################### PLATFORM DEFINITIONS ############

all: toasterall

################################ MAKE RULES #################################
#

clean: toasterclean

superclean: toastersuperclean

install: toasterinstall

toasterall:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) $(JFLAG) && cd ..;\
        done

toasterclean:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) clean && cd ..;\
        done

toastersuperclean:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) superclean && cd ..;\
        done

toasterinstall:
	for dir in $(DIRS); do\
          cd $$dir && $(MAKE) install && cd ..;\
        done


.PHONY: all clean superclean install \
	toasterall toasterclean toastersuperclean toasterinstall 


# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:



